# term = xterm-256color
auto-update = check
auto-update-channel = tip

# APPEARANCE
macos-icon = chalkboard
macos-titlebar-style = hidden

window-theme = system
theme = light:deep-theme-light,dark:deep-theme-dark

window-decoration = false
window-save-state = never
# large values which ghostty will clamp and result in a maximized window
window-height = 500
window-width = 1600

unfocused-split-opacity = 0.98

font-family = Mononoki Nerd Font Propo
font-size = 16

# BEHAVIOR
copy-on-select = clipboard
macos-option-as-alt = true
mouse-shift-capture = true
shell-integration = zsh

# QUICK TERMINAL
initial-window = false
macos-hidden = always
quick-terminal-animation-duration = 0
quick-terminal-screen = mouse
quick-terminal-autohide = false

keybind = global:ctrl+shift+space=toggle_quick_terminal

