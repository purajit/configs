# if [ "$TMUX" = "" ]; then tmux; fi

# Uncomment the following line to disable colors in ls.
# DISABLE_LS_COLORS="true"

# Uncomment the following line to disable auto-setting terminal title.
# DISABLE_AUTO_TITLE="true"

# run-help is alias to man by default; change it so we can get zsh builtins
unalias run-help
autoload run-help
HELPDIR="/usr/share/zsh/${ZSH_VERSION}/help"

eval "$(/opt/homebrew/bin/brew shellenv)"

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets regexp)
ZSH_HIGHLIGHT_HIGHLIGHTERS_DIR="$(brew --prefix)/Cellar/zsh-syntax-highlighting/0.8.0/share/zsh-syntax-highlighting/highlighters"
# make -/-- options dimmer
typeset -A ZSH_HIGHLIGHT_REGEXP
ZSH_HIGHLIGHT_REGEXP+=(' -{1,2}[a-zA-Z0-9_-]*' fg=008)
source "$(brew --prefix)/Cellar/zsh-syntax-highlighting/0.8.0/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"

plugins=(asdf aws colored-man-pages docker pip terraform venv_manager)

ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="kardanplus"
SHOW_AWS_PROMPT=false
ZSH_CUSTOM="$HOME/.zshcustom/"

source "$ZSH/oh-my-zsh.sh"
source "$HOME/.zshwork"

export PATH="$HOME/.emacs.d/bin:$HOME/code/gitstack:$PATH"

# prevent virtualenv from editing prompt, since we have a multi-line prompt
export VIRTUAL_ENV_DISABLE_PROMPT=1

if [[ -f "$HOME/.cargo/env" ]]; then
  . "$HOME/.cargo/env"
fi
